extends layout

block content
  div.container
    div.col-md-12
      form(method="post" action="/api/user")
        h1 User info
        div.form-group
          label(for="username") Username
          input#username.form-control(type="text" name="username")
        div.form-group
          label(for="email") Email
          input#email.form-control(type="text" name="email")
        div.form-group
          label(for="password") Password
          input#password.form-control(type="password" name="password")
        div.form-group
          label(for="secondPassword") Repeat password
          input#secondPassword.form-control(type="password" name="secondPassword")
        button.btn.btn-primary(type="submit") Update