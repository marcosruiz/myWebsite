extends layout

block content
  div.container
    div.card.mb-3
      div.row.no-gutters
        div.col-md-2
          img.card-img-top(src='/images/me.jpg' style="height: 100%;")
        div.col-md-10
          div.card-body
            h5.card-title= title
            p.card-text My real name is Marcos Ruiz. I am an engineer still learning how to do software better and faster.
            p.card-text Contact: marcosruizgarcia@gmail.com
            p.card-text You can see my curriculum #[a(href="/curriculum") here].
            p.card-text I also enjoy movies, series, trap music, sport, videogames and drinking beers with friends.
            p.card-text
              small.text-muted Last of all, I'm not a rapper
    div
      h3 My instagram
      div.row
        div.col-md-4
          include instagram/instagram1.html
        div.col-md-4
          include instagram/instagram2.html
        div.col-md-4
          include instagram/instagram3.html

