block navigation
  nav.navbar.navbar-expand-md.navbar-dark.bg-dark.fixed-top
    a.navbar-brand(href='/') #[img(src="/images/chirihop.svg" width="30" height="30")] Chirihop

    button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation")
      span.navbar-toggler-icon
    div#navbarNav.collapse.navbar-collapse
      ul.navbar-nav
        if session.email != null
          li.nav-item
            a.nav-link(href='/links') Links
        li.nav-item
          a.nav-link(href='/about') About me
        if session.email != null
          li.nav-item
            a.nav-link(href='/user') Welcome #{session.email}
        else
          li.nav-item
            a.nav-link(href='/register') Login or register
